<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kotlin_bg"
    android:scaleType="centerInside"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D5D5D5"
        android:text="Login"
        android:textColor="#2D2D2D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26"
        app:rippleColor="#EDDE44" />

    <EditText
        android:id="@+id/NamaPengguna"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#EDBE44"
        android:backgroundTintMode="src_in"
        android:ems="10"
        android:hint="Nama Pengguna"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#D5D5D5"
        android:textColorHighlight="#FF0000"
        android:textColorHint="#57D5D5D5"
        android:textColorLink="#DEB573"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />

    <EditText
        android:id="@+id/KataSandi"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#EDBE44"
        android:backgroundTintMode="src_in"
        android:ems="10"
        android:hint="Kata Sandi"
        android:inputType="textPassword"
        android:textColor="#D5D5D5"
        android:textColorHint="#63D5D5D5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NamaPengguna" />
</androidx.constraintlayout.widget.ConstraintLayout>